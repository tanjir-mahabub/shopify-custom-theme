# Ignore config files with sensitive data, but keep settings_data.json
config/*.yml
!config/settings_data.json

# Ignore log files
*.log

# Ignore OS-generated files
.DS_Store
Thumbs.db

# Ignore Node modules and dependencies if using any build tools
node_modules/
package-lock.json
yarn.lock

# Ignore build files and assets (if using build tools like Gulp, Webpack, etc.)
dist/
build/
public/
.tmp/
.sass-cache/
.npm/

# Ignore environment files
.env
.env.*

# Ignore IDE and editor-specific files
.vscode/
.idea/
*.sublime-workspace
*.sublime-project

# Ignore Shopify CLI cache
.shopify-cli/

# Ignore temporary or backup files
*.swp
*.bak
*~

# Keep empty folders in version control by using .gitkeep only when folder is empty
# Track .liquid and .json files in each folder

# Assets folder
assets/*
!assets/.gitkeep
!assets/*.liquid
!assets/*.json

# Config folder
config/*
!config/.gitkeep
!config/*.liquid
!config/*.json

# Locales folder
locales/*
!locales/.gitkeep
!locales/*.liquid
!locales/*.json

# Sections folder
sections/*
!sections/.gitkeep
!sections/*.liquid
!sections/*.json

# Snippets folder
snippets/*
!snippets/.gitkeep
!snippets/*.liquid
!snippets/*.json

# Templates folder
templates/*
!templates/.gitkeep
!templates/*.liquid
!templates/*.json
